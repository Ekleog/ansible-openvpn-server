# {{ ansible_managed }}

proto {{ "tcp-server" if openvpn_server_proto == "tcp" else "udp" }}
port {{ openvpn_server_port }}
dev {{ openvpn_server_dev }}

ca pki/ca.crt
cert pki/{{ inventory_hostname }}.crt
key pki/private/{{ inventory_hostname }}.key
dh dh.pem
tls-auth pki/private/ta.key 0

user {{ openvpn_server_user }}
group {{ openvpn_server_group }}

mode server
tls-server
client-to-client

keepalive 5 60
comp-lzo
persist-key
persist-tun

status openvpn-status.log
mute 20
